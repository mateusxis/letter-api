{
  "name": "letter-api",
  "version": "0.1.0",
  "description": "Letter api",
  "main": "index.js",
  "author": "mateusxis <mateusx@poli.ufrj.br>",
  "license": "MIT",
  "repository": "https://github.com/mateusxis/letter-api",
  "bugs": "https://github.com/mateusxis/letter-api/issues",
  "scripts": {
    "format": "prettier --write '**/*.{js,json,md}'",
    "lint": "eslint .",
    "prepare": "husky install",
    "start": "node index.js",
    "start-dev": "nodemon --inspect=0.0.0.0:5858 index.js",
    "test": "jest",
    "test-coverage": "yarn test --coverage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "koa": "^2.13.4",
    "koa-router": "^10.1.1"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.5.0",
    "husky": "^6.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^11.2.6",
    "prettier": "^2.7.1"
  }
}
