    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "async-retry": "^1.3.3",
    "awilix": "^4.3.4",
    "axios": "^0.27.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-helmet": "^6.1.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.1.1",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.9.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.5.0",
    "husky": "^6.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^11.2.6",
    "nock": "^13.2.9",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1"
  }
}
